@model bloginterior.Models.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<div class="comment-create-container">
    <h2 class="comment-title"> Add a Comment</h2>

    <form asp-action="Create" method="post" class="comment-form">
        <label class="form-label">Author:</label>
        <input type="text" asp-for="author" class="form-input" required />

        <label class="form-label">Content:</label>
        <textarea asp-for="content" class="form-textarea" required></textarea>

        <button type="submit" class="submit-btn"> Post Comment</button>
    </form>

    <a href="@Url.Action("Index")" class="back-btn"> Back to List</a>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #FCE4EC; /* Soft Lavender */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .comment-create-container {
        width: 85%;
        max-width: 600px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    .comment-title {
        font-family: 'Playfair Display', serif;
        font-size: 28px;
        font-weight: bold;
        color: #3F51B5; /* Royal Blue */
        margin-bottom: 20px;
    }

    .comment-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-label {
        font-size: 18px;
        font-weight: bold;
        color: #444;
        text-align: left;
        width: 100%;
        margin-bottom: 5px;
    }

    .form-input,
    .form-textarea {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 2px solid #ccc;
        border-radius: 8px;
        margin-bottom: 15px;
        transition: 0.3s;
    }

        .form-input:focus,
        .form-textarea:focus {
            border-color: #3F51B5; /* Blue focus effect */
            outline: none;
        }

    .form-textarea {
        height: 120px;
        resize: none;
    }

    .submit-btn {
        display: inline-block;
        background: #9575CD; /* Soft Purple */
        color: white;
        padding: 12px 25px;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        transition: 0.3s ease-in-out;
        cursor: pointer;
        border: none;
    }

        .submit-btn:hover {
            background: #7E57C2; /* Darker Purple */
        }

    .back-btn {
        display: inline-block;
        background: #F48FB1; /* Soft Pink */
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        transition: 0.3s ease-in-out;
        cursor: pointer;
        border: none;
    }

        .back-btn:hover {
            background: #EC407A; /* Darker Pink */
        }


</style>
