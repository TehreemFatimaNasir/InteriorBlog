@model bloginterior.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h4>Are you sure you want to delete this category?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.description</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #FCE4EC; /* Soft Lavender */
        color: #333;
        margin: 0;
        padding: 0;
    }
    /* Delete Category Container */
    .category-delete-container {
        width: 90%;
        max-width: 500px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .category-delete-title {
        font-size: 24px;
        font-weight: bold;
        color: #6A1B9A; /* Purple Theme */
        margin-bottom: 15px;
    }

    /* Category Details */
    .category-delete-details p {
        font-size: 16px;
        color: #333;
        margin-bottom: 10px;
    }

    /* Buttons */
    .delete-btn {
        background: #9C27B0; /* Purple */
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        margin-right: 10px;
    }

        .delete-btn:hover {
            background: #7B1FA2;
        }

    .cancel-btn {
        background: #6A1B9A; /* Purple */
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
    }

        .cancel-btn:hover {
            background: #4A148C;
        }


</style>