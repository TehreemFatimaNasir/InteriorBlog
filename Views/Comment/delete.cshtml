@model bloginterior.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<div class="delete-container">
    <h2 class="delete-title"> Delete Comment</h2>

    <p class="delete-text">Are you sure you want to delete this comment?</p>

    <div class="comment-details">
        <p><strong> Author:</strong> @Model.author</p>
        <p><strong> Comment:</strong> @Model.content</p>
    </div>

    <form method="post" action="@Url.Action("DeleteConfirmed", new { id = Model.Id })">

        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="delete-btn">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="cancel-btn">Cancel</a>
    </form>
</div>

<style>
    /* Delete Confirmation Styling */
    .delete-container {
        width: 90%;
        max-width: 500px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .delete-title {
        font-size: 26px;
        font-weight: bold;
        color: #D32F2F;
        margin-bottom: 15px;
    }

    .delete-text {
        font-size: 18px;
        color: #555;
        margin-bottom: 15px;
    }

    .comment-details {
        background: #f5f5f5;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

        .comment-details p {
            font-size: 16px;
            color: #333;
            margin: 5px 0;
        }

    .delete-btn {
        display: inline-block;
        background: #D32F2F;
        color: white;
        padding: 12px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        transition: 0.3s;
        border: none;
        cursor: pointer;
        margin-right: 10px;
    }

        .delete-btn:hover {
            background: #B71C1C;
        }

    .cancel-btn {
        display: inline-block;
        background: #757575;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        transition: 0.3s;
    }

        .cancel-btn:hover {
            background: #616161;
        }

</style>