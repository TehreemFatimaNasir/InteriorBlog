@model bloginterior.Models.Category

@{
    ViewData["Title"] = "Add New Category";
}

<h1>Add New Category</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control"></textarea>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #FCE4EC; /* Soft Lavender */
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Create Category Container */
    .category-create-container {
        width: 90%;
        max-width: 500px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
    }

    /* Title */
    .category-create-title {
        font-size: 24px;
        font-weight: bold;
        color: #6A1B9A; /* Purple Theme */
        text-align: center;
        margin-bottom: 20px;
    }

    /* Form Styling */
    .category-form label {
        font-size: 16px;
        font-weight: bold;
        display: block;
        margin-top: 10px;
        color: #333;
    }

    .category-form input,
    .category-form textarea {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

    .category-form textarea {
        resize: none;
        height: 100px;
    }

    /* Buttons */
    .save-btn {
        background: #9C27B0; /* Purple */
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 15px;
    }

        .save-btn:hover {
            background: #7B1FA2;
        }

    .back-btn {
        display: inline-block;
        background: #6A1B9A; /* Purple */
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        text-decoration: none;
        margin-top: 10px;
    }

        .back-btn:hover {
            background: #4A148C;
        }


</style>